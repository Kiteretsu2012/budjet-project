{
	"env": {
		"node": true,
		"es6": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-unused-vars": "warn",
		"no-console": "warn",
		"no-loop-func": "warn",
		"no-mixed-spaces-and-tabs": "off",
		"no-use-before-define": "error"
	}
}
